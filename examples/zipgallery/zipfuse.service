[Unit]
Description=ZipGallery FUSE
Requires=mnt-media\x2dadx2.mount
After=mnt-media\x2dadx2.mount
BindsTo=mnt-media\x2dadx2.mount
PartOf=zipgallery.target
Before=shutdown.target
Conflicts=shutdown.target

[Service]
Type=simple
ExecStart=/usr/local/bin/zipfuse /mnt/media-adx2 /mnt/zipgallery --allow-other --webserver :8000
Restart=on-failure
RestartSec=5
TimeoutStartSec=30
TimeoutStopSec=15
KillSignal=SIGTERM

[Install]
WantedBy=zipgallery.target
